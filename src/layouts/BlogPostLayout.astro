---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		tag?: string[];
	};
}

const {
    content: {title, description, pubDate, updatedDate, heroImage, tag},
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description}/>
    </head>
    <body class="bg-zinc-100">
        <Header />
        <main class="flex flex-col mx-auto max-w-4xl px-4 py-20">
            <article class="prose max-w-none prose-lg md:prose-lg prose-a:text-green-500  prose-headings:text-zinc-900 prose-strong:text-zinc-800 prose-h2:text-2xl prose-h3:text-xl prose-li:marker:text-zinc-600 prose-img:w-full">
                {heroImage && (
					<img
						width={870}
						height={360}
						src={heroImage}
						alt=""
						class=""
					/>
				)}
                <h1 class="text-2xl md:text-4xl font-bold " style="margin: 0">{title}</h1>
                {pubDate && <time class=" text-stone-700">{pubDate}</time>}
				{updatedDate && <div class="text-stone-500 ">Last updated on <time>{updatedDate}</time></div>}
                <slot />
            </article>
        </main>
    </body>
</html>

<style>
    #container {
      position: relative;
      width: 100%;
      overflow: hidden;
      padding-top: 56.25%; /* 16:9 Aspect Ratio */
    }
    
    #responsive-iframe {
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      width: 100%;
      height: 100%;
      border: none;
    }
</style>